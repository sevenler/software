<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="10.0dip">
        <TableRow android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/login_user" android:singleLine="true" />
            <AutoCompleteTextView android:id="@id/etUsername" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="64" android:layout_weight="1.0" android:inputType="textEmailAddress" />
        </TableRow>
        <TableRow android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/login_pass" android:singleLine="true" />
            <EditText android:id="@id/etPassword" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:password="true" android:singleLine="true" android:maxLength="64" android:layout_weight="1.0" />
        </TableRow>
    </TableLayout>
</LinearLayout>