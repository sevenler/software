<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@*android:color/transparent" />
    <item android:state_pressed="true" android:drawable="@drawable/widget_icon_state_pressed" />
    <item android:state_focused="true" android:state_checked="false" android:drawable="@drawable/widget_icon_state_focused" />
