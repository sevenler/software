<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:aqm="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@id/account_setup_right_panel" android:padding="@dimen/account_setup_inner_padding" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_alignParentRight="true">
        <org.kman.AquaMail.view.EqualSizeLinearLayout android:orientation="vertical" android:id="@id/account_setup_button_panel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <Button android:id="@id/button_save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/account_setup_save" android:singleLine="true" />
            <Button android:id="@id/button_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/account_setup_label_spacing" android:text="@string/account_setup_back" android:singleLine="true" />
            <Button android:id="@id/button_advanced" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/account_setup_label_spacing" android:text="@string/account_setup_advanced" android:singleLine="true" />
            <Button android:id="@id/button_next" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/account_setup_next" android:singleLine="true" />
        </org.kman.AquaMail.view.EqualSizeLinearLayout>
    </RelativeLayout>
    <ScrollView android:scrollbarStyle="insideInset" android:padding="@dimen/account_setup_inner_padding" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true" android:layout_toLeftOf="@id/account_setup_right_panel">
        <org.kman.AquaMail.view.SafeViewFlipper android:layout_gravity="center_horizontal" android:id="@id/account_setup_steps_flipper" android:layout_width="fill_parent" android:layout_height="wrap_content" android:measureAllChildren="false" aqm:maxWidth="@dimen/account_setup_max_width">
            <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/account_setup_simple_merge" />
            <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/account_setup_incoming_merge" />
            <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/account_setup_outgoing_merge" />
            <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/account_setup_finish_account_merge" />
            <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/account_setup_finish_alias_merge" />
        </org.kman.AquaMail.view.SafeViewFlipper>
    </ScrollView>
</RelativeLayout>