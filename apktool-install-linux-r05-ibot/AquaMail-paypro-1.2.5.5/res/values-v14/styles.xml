<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BogusBarDark" parent="@*android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/theme_dark_bb_background</item>
        <item name="android:backgroundSplit">@drawable/theme_dark_bb_background_split</item>
    </style>
    <style name="BogusBarLight" parent="@*android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/theme_light_bb_background</item>
        <item name="android:backgroundSplit">@drawable/theme_light_bb_background_split</item>
    </style>
    <style name="ThemeCompat" />
    <style name="ThemeCompat.Default.Dark" parent="@style/ThemeCompat.Holo.Dark" />
    <style name="ThemeCompat.Default.Light" parent="@style/ThemeCompat.Holo.Light" />
    <style name="ThemeCompat.Holo" parent="@style/ThemeCompat" />
    <style name="ThemeCompat.Holo.Dark" parent="@*android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/BogusBarDark</item>
        <item name="android:actionModeBackground">@drawable/theme_dark_bb_cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/theme_dark_bb_cab_background_bottom</item>
        <item name="bb_actionBarSize">?android:actionBarSize</item>
        <item name="bb_homeAsUpIndicator">?android:homeAsUpIndicator</item>
        <item name="bb_actionBarItemBackground">?android:actionBarItemBackground</item>
        <item name="bb_actionOverflowButtonStyle">?android:actionOverflowButtonStyle</item>
        <item name="bb_panelBackground">?android:panelBackground</item>
        <item name="bb_textAppearanceLargePopupMenu">?android:textAppearanceLargePopupMenu</item>
        <item name="bb_popupMenuStyle">?android:popupMenuStyle</item>
        <item name="bb_actionDropDownStyle">?android:dropDownSpinnerStyle</item>
        <item name="bb_actionMenuTextAppearance">?android:actionMenuTextAppearance</item>
        <item name="bb_actionMenuTextColor">?android:actionMenuTextColor</item>
        <item name="bb_listChoiceBackgroundIndicator">?android:listChoiceBackgroundIndicator</item>
        <item name="bb_actionModeSplitBackground">@drawable/theme_dark_bb_cab_background_bottom</item>
        <item name="bb_actionModeCloseBackground">@drawable/theme_dark_bb_btn_cab_done</item>
        <item name="bb_actionModeCloseDrawable">?android:actionModeCloseDrawable</item>
        <item name="bb_dividerVertical">?android:dividerVertical</item>
    </style>
    <style name="ThemeCompat.Holo.Light" parent="@*android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/BogusBarLight</item>
        <item name="android:actionModeBackground">@drawable/theme_light_bb_cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/theme_light_bb_cab_background_bottom</item>
        <item name="bb_actionBarSize">?android:actionBarSize</item>
        <item name="bb_homeAsUpIndicator">?android:homeAsUpIndicator</item>
        <item name="bb_actionBarItemBackground">?android:actionBarItemBackground</item>
        <item name="bb_actionOverflowButtonStyle">?android:actionOverflowButtonStyle</item>
        <item name="bb_panelBackground">?android:panelBackground</item>
        <item name="bb_textAppearanceLargePopupMenu">?android:textAppearanceLargePopupMenu</item>
        <item name="bb_popupMenuStyle">?android:popupMenuStyle</item>
        <item name="bb_actionDropDownStyle">?android:dropDownSpinnerStyle</item>
        <item name="bb_actionMenuTextAppearance">?android:actionMenuTextAppearance</item>
        <item name="bb_actionMenuTextColor">?android:actionMenuTextColor</item>
        <item name="bb_listChoiceBackgroundIndicator">?android:listChoiceBackgroundIndicator</item>
        <item name="bb_actionModeSplitBackground">@drawable/theme_light_bb_cab_background_bottom</item>
        <item name="bb_actionModeCloseBackground">@drawable/theme_light_bb_btn_cab_done</item>
        <item name="bb_actionModeCloseDrawable">?android:actionModeCloseDrawable</item>
        <item name="bb_dividerVertical">?android:dividerVertical</item>
    </style>
</resources>
